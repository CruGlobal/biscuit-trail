{
  "compilerOptions": {
    "lib": ["es2017", "es2018", "esnext"],
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "./dist",
    // "rootDirs": ["node_modules", "api", "lambdas", "services", "utils"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ] 
  }
}
